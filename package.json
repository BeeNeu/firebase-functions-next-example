{
  "name": "test",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^5.7.0",
    "firebase-functions": "^0.8.0",
    "next": "^4.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.36",
    "@babel/core": "^7.0.0-beta.36",
    "@babel/preset-env": "^7.0.0-beta.36",
    "cpx": "^1.5.0",
    "firebase-tools": "^3.16.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "prebuild": "rimraf dist/functions && rimraf dist/public",
    "build": "yarn build-functions && yarn build-app && yarn build-public",
    "postbuild": "cd dist/functions && yarn",
    "build-app": "next build src/app",
    "build-functions": "babel \"src/functions\" --out-dir \"dist/functions\"",
    "postbuild-functions": "cpx *{package.json,yarn.lock} dist/functions/",
    "build-public": "cpx src/public/**/*.* dist/public -C"
  }
}
